=============================================================================
-->

<dashboard version="1.1" theme="light">
  <label>Alerts</label>

  <row>
    <panel>
      <table>
        <search>
          <query>
            index=* sourcetype=dragos:alerts
            | spath
            | table
                id
                severity
                confidence
                threatFamily
                threatActor
                protocol
                status
                summary
                description
                firstSeenAt
                lastSeenAt
                updatedAt
                assets{}.id
                assets{}.name
                assets{}.ipAddress
                assets{}.macAddress
                assets{}.vendor
                assets{}.model
                assets{}.site
                assets{}.zone
            | sort - updatedAt
          </query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">true</option>
      </table>
    </panel>
  </row>

</dashboard>
