#
# Example Dragos Input Configuration
# Copy this file to inputs.conf and configure your Dragos credentials
#
# To enable:
# 1. Copy this file: cp inputs.conf.example inputs.conf
# 2. Populate the required connection fields
# 3. Restart Splunk: $SPLUNK_HOME/bin/splunk restart
#

[dragos://assets]
dragos_url = https://<sitestoreURL>
username = YOUR_DRAGOS_USERNAME
password = YOUR_DRAGOS_PASSWORD
interval = 3600
index = dragos
disabled = 0
endpoint = /api/v2/assets

[dragos://notifications]
dragos_url = https://<sitestoreURL>
