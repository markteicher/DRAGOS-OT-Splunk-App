<dashboard version="1.1" theme="dark">
  <label>Overview</label>

  <row>
    <panel>
      <title>OT Alerts by Severity</title>
      <chart>
        <search>
          <query>
            index=dragos sourcetype=dragos:alert
            | stats count by severity
          </query>
        </search>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>

    <panel>
      <title>Alerts Over Time</title>
      <chart>
        <search>
          <query>
            index=dragos sourcetype=dragos:alert
            | timechart count
          </query>
        </search>
        <option name="charting.chart">line</option>
      </chart>
    </panel>
  </row>

  <row>
    <panel>
      <title>Top OT Protocols</title>
      <chart>
        <search>
          <query>
            index=dragos sourcetype=dragos:telemetry
            | stats count by protocol
            | sort - count
            | head 10
          </query>
        </search>
        <option name="charting.chart">bar</option>
      </chart>
    </panel>
  </row>
</dashboard>
