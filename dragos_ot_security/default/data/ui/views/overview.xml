<dashboard version="1.1" theme="light">
  <label>Dragos OT Security – Overview</label>
  <description>
    High-level operational overview of Dragos OT security telemetry, alerts, assets,
    and adversary activity ingested into Splunk.
  </description>

  <!-- Header -->
  <row>
    <panel>
      <html>
        <![CDATA[
        <div style="display:flex; justify-content:space-between; align-items:center;">
          <div>
            <h2 style="margin-bottom:4px;">Dragos OT Security – Overview</h2>
            <p style="margin-top:0; color:#666;">
              Operational Technology threat visibility powered by Dragos
            </p>
          </div>
          <img src="/static/app/dragos_ot_security/dragos_logo.png"
               alt="Dragos"
               style="height:42px;" />
        </div>
        ]]>
      </html>
    </panel>
  </row>

  <!-- KPIs -->
  <row>
    <panel>
      <title>Active Alerts</title>
      <single>
        <search>
          <query>
            index=dragos sourcetype=dragos:alert status!=closed
          </query>
          <earliest>-24h</earliest>
          <latest>now</latest>
        </search>
        <option name="unit"></option>
      </single>
    </panel>

    <panel>
      <title>Critical / High Alerts</title>
      <single>
        <search>
          <query>
            index=dragos sourcetype=dragos:alert severity IN ("critical","high")
          </query>
          <earliest>-24h</earliest>
          <latest>now</latest>
        </search>
      </single>
    </panel>

    <panel>
      <title>Observed OT Assets</title>
      <single>
        <search>
          <query>
            index=dragos sourcetype=dragos:asset
            | stats dc(asset_id)
          </query>
          <earliest>-7d</earliest>
          <latest>now</latest>
        </search>
      </single>
    </panel>
  </row>

  <!-- Alerts by Severity -->
  <row>
    <panel>
      <title>Alerts by Severity</title>
      <chart>
        <search>
          <query>
            index=dragos sourcetype=dragos:alert
            | stats count by severity
          </query>
          <earliest>-7d</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">pie</option>
      </chart>
    </panel>

    <panel>
      <title>Alerts Over Time</title>
      <chart>
        <search>
          <query>
            index=dragos sourcetype=dragos:alert
            | timechart count
          </query>
          <earliest>-7d</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">line</option>
      </chart>
    </panel>
  </row>

  <!-- OT Context -->
  <row>
    <panel>
      <title>OT Protocol Activity</title>
      <chart>
        <search>
          <query>
            index=dragos sourcetype=dragos:telemetry
            | stats count by protocol
          </query>
          <earliest>-7d</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">bar</option>
      </chart>
    </panel>

    <panel>
      <title>Top Impacted Zones</title>
      <chart>
        <search>
          <query>
            index=dragos sourcetype=dragos:alert
            | stats count by zone
            | sort - count
          </query>
          <earliest>-7d</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">bar</option>
      </chart>
    </panel>
  </row>

</dashboard>
