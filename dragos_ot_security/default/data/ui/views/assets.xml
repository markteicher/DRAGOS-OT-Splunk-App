<dashboard version="1.1">
  <label>Dragos OT Security – Assets</label>

  <!-- ========================= -->
  <!-- HEADER WITH DRAGOS LOGO -->
  <!-- ========================= -->
  <row>
    <panel>
      <html>
        <![CDATA[
        <div style="display:flex; align-items:center; padding:10px 0;">
          <img src="/static/app/dragos_splunk_app/appLogo.png"
               alt="Dragos"
               style="height:48px; margin-right:16px;" />
          <h1 style="margin:0; font-weight:600;">
            Dragos OT Security – Assets
          </h1>
        </div>
        ]]>
      </html>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- ASSET KPIs -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Total Assets</title>
      <single>
        <search>
          <query>
            index=dragos sourcetype=dragos:assets
            | stats dc(asset_id)
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Critical Assets</title>
      <single>
        <search>
          <query>
            index=dragos sourcetype=dragos:assets criticality=high
            | stats dc(asset_id)
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Assets Seen (24h)</title>
      <single>
        <search>
          <query>
            index=dragos sourcetype=dragos:assets
            | where last_seen >= relative_time(now(), "-24h")
            | stats dc(asset_id)
          </query>
        </search>
      </single>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- ASSETS BY ZONE -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Assets by Zone</title>
      <chart>
        <search>
          <query>
            index=dragos sourcetype=dragos:assets zone=*
            | stats dc(asset_id) as assets by zone
            | sort -assets
          </query>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- ASSETS BY PROTOCOL -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Assets by OT Protocol</title>
      <chart>
        <search>
          <query>
            index=dragos sourcetype=dragos:assets protocol=*
            | stats dc(asset_id) by protocol
            | sort -count
          </query>
        </search>
        <option name="charting.chart">column</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

  <!-- ========================= -->
  <!-- ASSET INVENTORY TABLE -->
  <!-- ========================= -->
  <row>
    <panel>
      <title>Asset Inventory</title>
      <table>
        <search>
          <query>
            index=dragos sourcetype=dragos:assets
            | sort asset_name
            | table asset_id asset_name ip_address mac_address vendor model firmware_version asset_type zone site criticality first_seen last_seen
          </query>
        </search>
        <option name="count">25</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

</dashboard>
